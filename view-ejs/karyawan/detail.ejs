<h1>Biodata Karyawan</h1>
<hr>

<a href="/karyawan">
    <button>kembali ke data karyawan</button>
</a>
<br><br>

<% if (dakar[0]) { %>
    <table>
        <tr>
            <td>NIP</td>
            <td>: <%= dakar[0].nip %></td>
        </tr>
        <tr>
            <td>Nama</td>
            <td>: <%= dakar[0].nama %></td>
        </tr>
        <tr>
            <td>Jenis Kelamin</td>
            <td>: <%= dakar[0].gender %></td>
        </tr>
        <tr>
            <td>Alamat tinggal</td>
            <td>: <%= dakar[0].alamat %></td>
        </tr>
        <tr>
            <td>Tanggal lahir</td>
            <td>: <%= moment(dakar[0].tanggal_lahir).format('dddd, DD MMMM YYYY') %></td>
        </tr>
        <tr>
            <td>Nomor Telepon</td>
            <td>: <%= dakar[0].nomor_telp %></td>
        </tr>
        <tr>
            <td>Departemen</td>
            <td>: <%= dakar[0].dept_nama %> (<%= dakar[0].singkatan %>)</td>
        </tr>
        <tr>
            <td>Agama</td>
            <td>: <%= dakar[0].agama_nama %></td>
        </tr>
    </table>
<% } else { %>
    <h2>Data tidak ditemukan</h2>
<% } %>
