<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <meta name="description" content="" />
        <title>Sistem SDM - Login</title>
        <link rel="stylesheet" href="bootstrap/css/bootstrap.min.css">
        <link rel="stylesheet" href="custom/css/sign-in.css">
        <script src="bootstrap/js/bootstrap.min.js"></script>
    </head>
    <body class="d-flex align-items-center py-4 bg-body-tertiary">
        <main class="form-signin w-100 m-auto">
            <form method="post" action="/auth/proses-login">
                <img src="img/dosencoding-bw.png" alt="" class="bi mt-4 mb-3" width="100">
                <% if (typeof notif !== 'undefined') { %>
                    <div class="alert alert-warning alert-dismissible fade show" role="alert">
                        <%= notif %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                <% } %>
                <h1 class="h3 mb-3 fw-normal">Silakan masuk</h1>
                <div class="form-floating">
                    <input type="text" class="form-control" id="floatingInput" name="form_username" placeholder="name@example.com" />
                    <label for="floatingInput">Username</label>
                </div>
                <div class="form-floating">
                    <input type="password" class="form-control" id="floatingPassword" name="form_password" placeholder="Password" />
                    <label for="floatingPassword">Kata sandi</label>
                </div>
                <button class="btn btn-primary w-100 py-2" type="submit">Masuk</button>
                <p class="mt-5 mb-3 text-body-secondary">&copy; 2025</p>
            </form>
        </main>
    </body>
</html>
